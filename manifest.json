{
  "manifest_version": 3,
  "name": "Amazon ASIN and Review Extractor",
  "version": "1.0",
  "description": "Extracts ASINs from Amazon search and fetches product review pages.",
  "permissions": [
    "activeTab",
    "scripting",
    "webRequest"
  ],
  "host_permissions": [
    "https://www.amazon.com/*",
    "https://www.amazon.com/*/dp/*",
    "https://www.amazon.com/dp/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.com/s*",
        "https://www.amazon.com/dp/*",
        "https://www.amazon.com/*/dp/*"
      ],
      "js": [
        "content.js",
        "product_details_scraper.js", // Include the new file
        "review_scraper.js"
      ],
      "run_at": "document_idle"
    }
  ]
}