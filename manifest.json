{
  "manifest_version": 3,
  "name": "Amazon ASIN and Review Extractor",
  "version": "1.0",
  "description": "Extracts ASINs from Amazon search and fetches product review pages.",
  "permissions": [
    "activeTab",
    "scripting",
    "webRequest"
  ],
  "host_permissions": [
    "https://www.amazon.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.com/s?i=mobile&rh=n%3A7072561011&s=popularity-rank&fs=true"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}